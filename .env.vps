# =============================================================================
# RAPTOR VPS Environment Configuration
# For Executor + API deployment on Hetzner VPS
# =============================================================================

# =============================================================================
# Application
# =============================================================================
NODE_ENV=production
PORT=3000
API_PORT=3000

# =============================================================================
# Database (Supabase)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Executor Configuration
# =============================================================================
EXECUTOR_API_KEY=your_secret_api_key_here
EXECUTOR_PRIVATE_KEY=your_evm_private_key_here
SOLANA_EXECUTOR_PRIVATE_KEY=your_solana_private_key_here

# =============================================================================
# Solana RPCs
# =============================================================================
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_WSS_URL=wss://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Backup RPCs (optional)
TRITON_RPC_URL=
ALCHEMY_SOL_RPC_URL=

# =============================================================================
# EVM RPCs
# =============================================================================
BSC_RPC_URL=https://bsc-dataseed.binance.org
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# =============================================================================
# Private/MEV RPCs (Optional but recommended for production)
# =============================================================================
# Ethereum - Flashbots
ETH_PRIVATE_RPC_URL=https://rpc.flashbots.net
FLASHBOTS_AUTH_KEY=your_flashbots_auth_key

# BSC - bloXroute
BSC_PRIVATE_RPC_URL=https://bsc.rpc.blxrbdn.com
BLOXROUTE_AUTH_HEADER=your_bloxroute_auth_header

# Base - Private RPC
BASE_PRIVATE_RPC_URL=

# =============================================================================
# Fee Wallets
# =============================================================================
FEE_WALLET_SOL=your_solana_fee_wallet_address
FEE_WALLET_EVM=your_evm_fee_wallet_address

# =============================================================================
# Wallet Encryption
# =============================================================================
USER_WALLET_ENCRYPTION_KEY=your_32_character_encryption_key

# =============================================================================
# Trading Configuration (Optional)
# =============================================================================
VERIFICATION_SLIPPAGE_BPS=500
MAX_POSITION_SIZE_SOL=10
MAX_POSITION_SIZE_ETH=1

# =============================================================================
# Optional APIs
# =============================================================================
GOPLUS_API_KEY=
BIRDEYE_API_KEY=
JUPITER_API_KEY=

# =============================================================================
# Monitoring
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# WebSocket Configuration
# =============================================================================
SOLANA_CONNECTION_COMMITMENT=confirmed
WS_RECONNECT_TIMEOUT=5000

# =============================================================================
# Notes
# =============================================================================
# 1. This file contains ALL sensitive keys and should NEVER be committed to git
# 2. Keep a secure backup of this file
# 3. Private keys should have NO leading "0x" prefix for EVM chains
# 4. Solana private key should be base58 encoded
# 5. Make sure fee wallets are different from executor wallets
# 6. Test with small amounts first before going live
